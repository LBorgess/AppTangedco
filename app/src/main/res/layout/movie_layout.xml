<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/filme"
    android:orientation="vertical"
    tools:context=".MovieActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Moviens"
        android:textColor="#FFF"
        android:textSize="60sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="INTERACT WITH YOUR DEMONS"
        android:textColor="#FFF" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idMail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Username"
        android:padding="20sp"
        android:textColorHint="@color/white"
        app:counterTextColor="#FFFF"
        app:endIconMode="clear_text"
        app:startIconContentDescription="username"
        app:startIconDrawable="@drawable/baseline_face">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHighlight="@color/white"

        "/>


    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/idPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Password"
        android:padding="20sp"
        android:textColorHint="@color/white"
        app:startIconContentDescription="Password"
        app:startIconDrawable="@drawable/baseline_key">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword" />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:backgroundTint="#FF8400"
        android:text="SIGN IN">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="15dp"
        android:text="OR"
        android:textColor="@color/black"

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#3b5998"
        android:text="Sign in with Facebook">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:gravity="center"
        android:text="DonÂ´t have an account yet? Sign Up"
        android:textColor="@color/white"


</LinearLayout>